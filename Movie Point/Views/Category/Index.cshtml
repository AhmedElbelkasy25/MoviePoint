@section Scripts {

    @if (@TempData["success"] != null)
    {
        <script>
            toastr.success('@TempData["success"]')
        </script>
    }
}
@model List<Category>

<!DOCTYPE html>
<html>
<head>
    <title>Category List</title>
    
    <script type="text/javascript">
        function confirmDelete() {
            return confirm("Are you sure you want to delete this category?");
        }
    </script>
    <div>
        <a href="/Category/Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create Category
        </a>
    </div>
</head>
<body>
    <div class="container">
        <table class="table table-striped">
            <thead>
                <tr class="text-center">
                    <th scope="col">Category</th>
                    <th scope="col">Show All</th>
                    <th scope="col">Actions</th>
                    
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="text-center">
                        <td>@item.Name</td>
                        <td><a href="/Category/GetCategoryMovies?CategoryName=@item.Name">show all Movies</a></td>
                        <td>
                            <a href="/Category/Delete/@item.Id" class="btn btn-warning" onclick="return confirmDelete()">
                                Delete
                                <i class="bi bi-trash"></i>
                            </a>
                            <a href="/Category/Edit/@item.Id" class="btn btn-success"> Edit <i class="bi bi-gear"></i> </a>
                        
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>

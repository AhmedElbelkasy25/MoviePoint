@section Scripts {

    @if (@TempData["success"] != null)
    {
        <script>
            toastr.success('@TempData["success"]')
        </script>
    }
}
@model List<Movie_Point.Models.Movie>

<div class="container mt-4">
    <h2 class="text-center mb-4">Movie Collection</h2>
    <div class="row">
        <div>
            <a href="/Movie/Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create Movie
            </a>
        </div>
        <table class="table table-striped">
            <thead>
                <tr class="text-center">

                    <th scope="col">Movie</th>
                    <th scope="col">Status</th>
                    <th scope="col">Number of Watches</th>
                    <th scope="col">Cinema</th>
                    <th scope="col">Category</th>
                    <th scope="col">Actions</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="text-center">

                        <td>@item.Name</td>  
                        <td> @item.MovieStatus</td>
                        <td> @item.NumOfWatch</td>
                        <td><a class="btn btn-dark" href="/Cinema/GetCinemaMovies?CinemaName=@item.Cinema.Name">  @item.Cinema.Name  </a> </td>
                        <td> <a class="btn btn-dark" href="/Category/GetCategoryMovies?CategoryName=@item.Category.Name"> @item.Category.Name</a></td>
                        <td>
                            <a href="/Movie/Delete/@item.Id" class="btn btn-warning" onclick="return confirmDelete()">
                                Delete
                                <i class="bi bi-trash"></i>
                            </a>
                            <a href="/Movie/Edit/@item.Id" class="btn btn-success"> Edit <i class="bi bi-gear"></i> </a>

                        </td>
                    </tr>

                }

            </tbody>
        
    </div>
</div>



<style>
    .card {
        overflow: hidden;
    }

        .card img {
            min-width: 280px;
            object-fit: cover;
        }

    .card-title {
        font-weight: bold;
        font-size: 1.2rem;
    }

    .card-body {
        padding: 1rem;
    }

    .shadow-sm {
        border-radius: 10px;
        transition: transform 0.7s ease, box-shadow 0.3s ease;
    }

        .shadow-sm:hover {
            transform: scale(1.05);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
        }

    span {
        border-radius: 10px;
    }

    #aa:hover {
        transform: scale(1.04)
    }

</style>

<script type="text/javascript">
    function confirmDelete() {
        return confirm("Are you sure you want to delete this category?");
    }
</script>
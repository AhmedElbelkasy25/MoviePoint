@section Scripts {

    @if (@TempData["success"] != null)
    {
        <script>
            toastr.success('@TempData["success"]')
        </script>
    }
}

<script type="text/javascript">
    function confirmDelete() {
        return confirm("Are you sure you want to delete this Actor ?");
    }
</script>
<div>
    <a href="/Actor/Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Create Actor
    </a>
</div>
@model List<Actor>

<div class=" container" style="width:800px">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-3">
                <a  href="/Actor/GetActor/@item.Id"> <img src="~/images/cast/@item.ProfilePicture" /> </a>
                <p>@item.FirstName  @item.LastName</p>
                <a href="/Actor/Delete/@item.Id" class="btn btn-warning" onclick="return confirmDelete()">
                    Delete
                    <i class="bi bi-trash"></i>
                </a>
                <a href="/Actor/Edit/@item.Id" class="btn btn-success"> Edit <i class="bi bi-gear"></i> </a>

            </div>
        }
    </div>
    
</div>

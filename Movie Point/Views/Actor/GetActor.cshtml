@model Actor
<div class="container border-1">
    <div>
        <img src="~/images/cast/@Model.ProfilePicture" />
        <h3>@Model.FirstName @Model.LastName</h3>
    </div>
    <p> bio: @Model.Bio</p>
    <a class="link-info" href="">Social Media</a>
</div>

<div class="container mt-4">
    <h2 class="text-center mb-4">Movie Collection</h2>
    <div class="row">
        @foreach (var item in ViewBag.movies)
        {
            <div class="col-md-4 d-flex align-items-stretch">
                <div class="card mb-4 shadow-sm">
                    <div class="text-center"> <h5>@item.Name</h5></div>
                    <img src="~/images/movies/@item.ImgUrl" class="card-img-top" style="max-height:400px; width:auto" alt="@item.Name">
                    <div class="card-body">
                        <h5 class="card-title text-primary">
                            Cinema :
                            <a href="/cinema/getCinemaMovies?CinemaName=@item.Cinema.Name">@item.Cinema.Name </a>
                        </h5>
                        <h5 class="card-title text-primary">
                            Category :
                            <a href="/Category/getCategoryMovies?CategoryName=@item.Category.Name">@item.Category.Name</a>
                        </h5>
                        <p class="card-text">
                            price: @item.Price EGP
                        </p>
                        <p class="card-text">
                        <p class="text">start Date: @item.StartDate.ToString("yyyy-MM-dd")</p>
                        <p class="text">End Date: @item.EndDate.ToString("yyyy-MM-dd")</p>
                        </p>
                        @if (item.MovieStatus == Movie_Point.Data.Enums.MovieStatus.Upcoming)
                        {
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="p-2" style="background-color:saddlebrown">@item.MovieStatus</span>
                                <span> <a id="aa" href="" style="background-color:green;width:150px" class="btn ml-5 p-1">Book Now</a></span>
                            </div>
                        }
                        @if (item.MovieStatus == Movie_Point.Data.Enums.MovieStatus.Available)
                        {
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="p-2" style="background-color:gold">@item.MovieStatus</span>
                                <span> <a id="aa" href="" style="background-color:green;width:150px" class="btn ml-5 p-1">Book Now</a></span>
                            </div>
                        }
                        @if (item.MovieStatus == Movie_Point.Data.Enums.MovieStatus.Expired)
                        {
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="p-2" style="background-color:red">@item.MovieStatus</span>
                                <span> <a href="" style="background-color:darkslategrey;width:150px" class="btn ml-5 p-1">Book Now</a></span>
                            </div>
                        }
                        <div class="d-flex justify-content-between align-items-center">
                            <a href="/Movie/details/@item.Id" class="btn btn-sm btn-outline-primary mt-2">
                                <i class="bi bi-info-circle"></i> Details
                            </a>

                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>



<style>
    .card {
        overflow: hidden;
    }

        .card img {
            min-width: 280px;
            object-fit: cover;
        }

    .card-title {
        font-weight: bold;
        font-size: 1.2rem;
    }

    .card-body {
        padding: 1rem;
    }

    .shadow-sm {
        border-radius: 10px;
        transition: transform 0.7s ease, box-shadow 0.3s ease;
    }

        .shadow-sm:hover {
            transform: scale(1.05);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
        }

    span {
        border-radius: 10px;
    }

    #aa:hover {
        transform: scale(1.04)
    }

</style>
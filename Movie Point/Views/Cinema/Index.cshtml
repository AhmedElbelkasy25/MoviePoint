@model List<Cinema>


<table class="table table-striped">
    <thead>
        <tr class="text-center">
            
            <th scope="col">Cinema</th>
            <th scope="col">Action</th>
            
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr class="text-center">
                
                <td>@item.Name</td>
                <td><a href="/Cinema/GetCinemaMovies?CinemaName=@item.Name">show all Movies</a></td>
            </tr>

        }
        
    </tbody>
</table>
